<?php
class InputValidator extends BLITZValidator
{
	public $minLength;
	public $maxLength;
	public $key;
	
	public function __construct($key, $required=false, $minLength=0, $maxLength=0, $message=null)
	{
		$this->isRequired    =  $required;
		$this->shouldRequire =  $required ? false : true;
		$this->minLength     =  $minLength;
		$this->maxLength     =  $maxLength;
		$this->key           =  $key;
		$this->message       =  $message;
	}
	
	public function validate()
	{
		$value = $this->form->{$this->key};
		$this->updateRequiredFlag($value);
		
		if($this->minLength)
		{
			if(strlen($value) < $this->minLength)
			{
				$this->isValid  = false;
				return;
			}
			else
			{
				$this->isValid = true;
			}
		}
		
		if($this->maxLength)
		{
			if(strlen($value) <= $this->maxLength)
			{
				$this->isValid  = true;
			}
			else
			{
				$this->isValid = false;
			}
		}
	}
}
?>